{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src", /* Specify the correct root directory */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react", /* Ensure TypeScript understands JSX */
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ], /* Include all TypeScript files in the src folder */
  "exclude": [
    "node_modules",
    "dist"
  ]
}