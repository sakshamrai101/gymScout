{
  "compilerOptions": {
    "target": "es2016", /* Target JavaScript version for output */
    "module": "commonjs", /* Use CommonJS for Node.js compatibility */
    "outDir": "./dist", /* Output folder for compiled JavaScript */
    "rootDir": "./", /* Root folder for TypeScript source files */
    "strict": true, /* Enable strict type checking */
    "esModuleInterop": true, /* Allow default imports for CommonJS modules */
    "allowSyntheticDefaultImports": true, /* Allow synthetic default imports */
    "skipLibCheck": true, /* Skip type checking for .d.ts files */
    "forceConsistentCasingInFileNames": true, /* Enforce consistent casing in imports */
    "typeRoots": [ "node_modules/@types"],
  },
  "include": [
    "./**/*.ts"
  ], // Include all .ts files in the project
  "exclude": [
    "node_modules",
    "dist"
  ] // Exclude these folders/* Include all TypeScript files */
}